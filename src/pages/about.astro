---
import Image from "astro/components/Image.astro";
import BaseLayout from "@/layouts/base.astro";
import Navbar from "@/components/Navbar.astro";
import Footer from "@/components/Footer.astro";

import ProfilePic from '@/assets/simon_wide_shot.png';

// calculate age from 21st of May 2001
const age = Math.floor((new Date().getTime() - new Date(2001, 5, 21).getTime()) / 3.15576e+10);
---
<BaseLayout>
    <Navbar />

    <main class="mb-32">
        <div class="mb-16">
            <Image class="mx-auto" width={2000} height={500} src={ProfilePic} alt="Simon Sorensen in front of a beautiful Danish sunset" />
            <p class="text-lg mt-4 text-zinc-300">Disclaimer: this picture was taken in 2019 on my 18th birthday, while I am now {age} years old.</p>
        </div>
    
        <p class="text-2xl md:text-4xl font-serif">Software Engineering Intern at The LEGO Group</p>
    </main>

    <Footer />
</BaseLayout>