---
import Icon from "astro-icon";

import Base from "@/layouts/base.astro";
import Navbar from "@/components/Navbar.astro";
import Footer from "@/components/Footer.astro";

// sections
import Hero from "@/components/homepage/hero/Hero.astro";
import WritingSection from "@/components/homepage/writing/WritingSection.astro";
import TelegraphSection from "@/components/homepage/telegraph/TelegraphSection.astro";
import EarlyInternetSection from "@/components/homepage/early-internet/EarlyInternetSection.astro";
import PortabilitySection from "@/components/homepage/portability/PortabilitySection.astro";
import PersonalComputingSection from "@/components/homepage/personal-computing/PersonalComputingSection.astro";
import InternetSection from "@/components/homepage/internet/InternetSection.astro";
import MobileComputingSection from "@/components/homepage/mobile-computing/MobileComputingSection.astro";
import MachineLearningSection from "@/components/homepage/machine-learning/MachineLearningSection.astro";
import EasterEgg from "@/components/EasterEgg.astro";
---

<Base>
	<Navbar floating={false} />

	<Hero />

	{import.meta.env.DEV && (
		<WritingSection />

		<TelegraphSection />

		<EarlyInternetSection />

		<PortabilitySection />

		<PersonalComputingSection />

		<InternetSection />

		<MobileComputingSection />

		<MachineLearningSection />

		<EasterEgg easterEgg={2} />
	)}

	<Footer />
</Base>
