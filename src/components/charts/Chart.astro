---
interface Props {
    title: string;
}

const { title } = Astro.props;
---
<script>
    import Chart from 'chart.js/auto';

    (async function() {
        Chart.defaults.font.family = "Soehne, sans-serif";

        const data = [
            { year: 2010, count: 10 },
            { year: 2011, count: 20 },
            { year: 2012, count: 15 },
            { year: 2013, count: 25 },
            { year: 2014, count: 22 },
            { year: 2015, count: 30 },
            { year: 2016, count: 28 },
        ];

        const chartElement = document.getElementById('acquisitions');
        
        if (chartElement && chartElement instanceof HTMLCanvasElement) {
            new Chart(
                chartElement,
                {
                    type: 'bar',
                    data: {
                        labels: data.map(row => row.year),
                        datasets: [
                            {
                                label: 'Acquisitions by year',
                                data: data.map(row => row.count)
                            }
                        ]
                    },
                    options: {
                        plugins: {
                            legend: {
                                labels: {
                                    font: {
                                        family: "Soehne, sans-serif",
                                        size: 16,
                                    }
                                }
                            }
                        },
                    },
                }
            );
        }
    })();
</script>

<figure style="width: 800px;" class="bg-zinc-900 p-6 pt-4 rounded my-8">
    <figcaption class="text-white text-xl text-center font-bold mb-8">{title}</figcaption>

    <canvas id="acquisitions"></canvas>
</figure>