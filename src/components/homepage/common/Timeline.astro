---
interface Props {
    timelineTop?: string;
    markerTop?: string;
}

const { timelineTop = 'top-0', markerTop = 'top-10' } = Astro.props;
---
<div class="invisible md:visible">
    <!-- markers -->
    <svg
        class={`absolute left-4 h-full w-6 ${timelineTop}`}
        aria-hidden="true"
    >
        <defs>
            <pattern
                id=":R1t6:"
                width="32"
                height="8"
                patternUnits="userSpaceOnUse"
            >
                <path
                    d="M 0 0 H 10 M 0 8 H 10"
                    class="stroke-white/20"
                    fill="none"
                ></path>
            </pattern>
        </defs>

        <rect width="100%" height="100%" fill="url(#:R1t6:)"></rect>
    </svg>

    <!-- marker -->
    <div class={`w-6 border-t border-zinc-300 absolute left-4 ${markerTop}`}></div>
</div>