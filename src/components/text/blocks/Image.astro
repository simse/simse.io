---
import { getImageBuilder } from '@cms'

interface Props {
  index: number
  isInline: boolean
  class?: string
  node: {
    _type: 'image'
    _key: string
    asset: {
      _ref: string
      _type: string
    }
  }
}

const props = Astro.props

const imageBuilder = getImageBuilder(props.node.asset)
---

<img
  src={imageBuilder.width(1000).height(800).crop('focalpoint').url()}
  class="my-4 rounded col-start-1 col-end-7"
  alt=""
/>
