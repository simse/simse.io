---
import { Code } from 'astro:components';

interface Props {
  index: number;
  isInline: boolean;
  class?: string;
  node: {
    _type: 'codeBlock';
    _key: string;
    language: 'js' | 'ts';
    sourceCode: string;
  }
}

const props = Astro.props;
---
<Code code={props.node.sourceCode} lang={props.node.language} theme="github-dark" />