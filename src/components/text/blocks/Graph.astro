---
import LineChart from '@components/charts/LineChart.astro'

interface Props {
  index: number
  isInline: boolean
  class?: string
  node: {
    _type: 'graphBlock'
    _key: string
    title: string
    type: string
    datasets: {
      _type: 'file'
      asset: {
        _ref: string
        _type: 'reference'
      }
    }
  }
}

const props = Astro.props
---
<div class="col-start-1 col-end-7">
  {props.node.type === 'line' ? <LineChart title={props.node.title} datasetReference={props.node.datasets.asset._ref} /> : null}
</div>  