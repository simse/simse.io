---
import { Icon } from 'astro-icon/components'
import NavbarSvelte from './Navbar.svelte'

interface Props {
  activeItem?: 'Home' | 'Blog' | 'Projects' | 'Contact'
}

const items = [
  {
    title: 'Home',
    link: '/',
  },
  {
    title: 'Blog',
    link: '/blog',
  },
  {
    title: 'Projects',
    link: '/projects',
  },
]

const { activeItem } = Astro.props
---

<NavbarSvelte client:load activeItem={activeItem}>
  <Icon name="tabler:search" size={22} slot="search-icon" />
  <Icon name="tabler:menu-2" size={18} slot="menu-icon" />
  <Icon name="tabler:x" size={18} slot="close-icon" />
</NavbarSvelte>