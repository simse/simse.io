---
interface Props {
    published: Date;
    updated?: Date;
}

const { published, updated } = Astro.props;

const formatDate = (date: Date) => {
    return new Intl.DateTimeFormat('en-US', {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
    }).format(date);
}
---
<span class="text-italic text-black/60">Published on <span class="text-black">{formatDate(published)}</span></span>