---
interface Props {
  published: Date
}

const { published } = Astro.props

const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  }).format(date)
}
---

<span class="text-zinc-400"
  >Published on <span class="text-white"
    >{formatDate(published)}</span
  ></span
>
