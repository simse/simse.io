---
import { Icon } from 'astro-icon';
import RainbowText from './utilities/RainbowText.astro';

const buildDate = new Date().toLocaleDateString('en-GB', {
    day: 'numeric',
    month: 'long',
    year: 'numeric',
});
---
<footer class="border-t border-zinc-800 p-8">
    <div class="flex items-center">
        <Icon class="mr-2" name="pixelarticons:mood-happy" width="26" />
        
        Designed and built with love in <strong class="ml-1"><RainbowText text="London" speed={2} /></strong>
    </div>

    <p class="text-zinc-400 mt-4">This site was statically generated on {buildDate}.</p>
</footer>