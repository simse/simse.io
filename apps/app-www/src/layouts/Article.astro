---
const { content } = Astro.props;

import Layout from "./Layout.astro";
import Image from "../components/Image.astro";
import "../styles/article.scss";
import "../styles/prism.css";


const breadcrumbs = [
	{
		name: 'Articles',
        path: '/articles'
	},
    {
        name: content.title,
        path: `/articles/${content.slug}`
    }
]
---
