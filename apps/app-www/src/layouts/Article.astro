---
import type { Article } from "@simse/app-cms/src/types";

export interface Props {
	article: Article
}
const { article } = Astro.props;

import Layout from "./Layout.astro";
import Image from "../components/Image.astro";
import "../styles/prism.css";
import { prettyDate } from "src/utils/date";

---
<Layout title={article?.name || ""} description={""} disableMaxWidth={true} noSpacing={true}>
	<!-- Featured Image -->
	<Image image={article.media}  height={600} width={2000} gravity={"center"} />

	<!-- Heading Metadata -->
	<div class="px-4 py-8 mb-8 max-w-4xl mx-auto">
		<div class="mb-4">
		{article.category.map((category) => (
			<a href={`/category/${category.slug}`} class="bg-blue-700 px-3 py-1 mr-2 rounded-full inline-block">{category.name}</a>
		))}
		</div>

		<h1 class="text-2xl md:text-3xl lg:text-4xl max-w-6xl mb-4 font-bold">{article.name}</h1>

		<p class="text-gray-300 text-lg">Published on {prettyDate(article.createdAt)}</p>
	</div>



	<div class="article max-w-4xl px-4 prose prose-lg dark:prose-invert mx-auto">
		<slot />
	</div>
</Layout>