---
import Layout from '../layouts/Layout.astro';

// components
import Image from '@components/Image.astro';
import CompactArticleList from '@components/CompactArticleList.astro';
---
<Layout title="Welcome" disableMaxWidth={true}>
	<div class="flex gap-8 max-w-[2000px] mx-auto px-8 flex-col-reverse md:flex-row">
		<div class="flex-none w-full sm:w-96">
			<!-- About -->
			<h1 class="text-5xl font-serif mb-8">Simon Sorensen</h1>

			<h2 class="font-bold text-xl font-serif">About me</h2>
			<h3 class="text-3xl font-serif">Computer Science student</h3>
			<p class="text-gray-400">by day</p>

			<h3 class="text-3xl font-serif mt-4">Software Engineering Intern @ LEGO</h3>
			<p class="mb-4 text-gray-400">also by day</p>

			<h3 class="text-3xl font-serif mt-4"><a href="https://www.youtube.com/@simon.sorensen" target="_blank" class="underline decoration-from-font">Youtube</a> Programming Educator</h3>
			<p class="mb-4 text-gray-400">by night</p>

			<a class="underline decoration-from-font font-serif text-xl" href="https://simon-sorensen.com" target="_blank">Curriculum Vitae</a>

			<!-- Articles -->
			<div class="mt-8">
				<h2 class="font-bold text-xl font-serif mb-2">Articles</h2>

				<CompactArticleList />
			</div>

			<a class="underline decoration-from-font mt-8 block font-serif text-2xl" href="/projects">Want to see my <em>work</em>?</a>
		</div>

		<div class="flex-auto">
			<Image id="d56330f2-41d4-484a-e488-8c2566378100" width={1600} height={1000} aspectRatio="5/3" gravity="center" alt="80s style graphic with my full name: Simon Sorensen" />
		</div>
	</div>
</Layout>
