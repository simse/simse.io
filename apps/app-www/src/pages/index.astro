---
import Layout from '../layouts/Layout.astro';

// components
import ArticleList from '@components/ArticleList.astro';
import BackgroundMusic from 'src/parts/BackgroundMusic.astro';
import Chat from '@components/Chat.svelte';

// images
import BackgroundImage from '../images/bg_smaller.jpg';
import PlayingIcon from '../icons/volume-2.svg';
import StoppedIcon from '../icons/volume-x.svg';
import HeroImage from 'src/parts/HeroImage.astro';
---
<Layout title="Welcome" noSpacing={true}>
	<div class="absolute -top-10 left-0 w-full h-full -z-50">
		<div class="h-1/4 xl:h-1/3 w-full bg-gradient-to-b from-purple-800/60 to-black"></div>

		<!--svg class="absolute h-full w-full z-0" xmlns="http://www.w3.org/2000/svg" version="1.1">			
			<image id="img" x="0" y="0" width="100%" height="100%" xlink:href={BackgroundImage.src} filter="url(#heat)" />
		</svg-->
	</div>

	<div class="w-fit mx-auto relative mb-32">
		<HeroImage />
		<h2 class="absolute bottom-8 text-center w-full text-2xl font-bold text-purple-200">Software Engineering Intern @ LEGO<br />CS Student @ Kingston University</h2>
		<p class="w-full text-center">See my CV right <a class="underline" href="https://cv.simse.io">here</a></p>
	</div>

	<BackgroundMusic>
		<div class="w-full flex" id="stopped">
			<img src={StoppedIcon} class="ml-auto" />
		</div>

		<div class="w-full flex hidden" id="playing">
			<img src={PlayingIcon} class="ml-auto" />
		</div>

		<div class="w-full flex hidden" id="loading">
			<p class="ml-auto">loading...</p>
		</div>
	</BackgroundMusic>

	<!--div class="py-8 ">
		<h2 class="text-lg font-bold mb-4">Articles</h2>
	
		<ArticleList />
	</div-->

	<!--div class="py-8">
		<h2 class="text-lg font-bold mb-8">Chatbot Experiment</h2>

		<Chat client:load />
	</div-->
</Layout>
