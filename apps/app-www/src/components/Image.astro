---
import { Image } from '@astrojs/image/components';

export interface Props {
    src: string;
    credit?: string;
    css?: string;
    height?: number;
    width?: number;
    alt: string;
}

const { src, credit, height, width, css, alt } = Astro.props as Props;

const dev = Astro.site?.host === "localhost";

const aspectRatio = "5/3";
