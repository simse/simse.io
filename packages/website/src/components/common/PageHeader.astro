---
interface Props {
  title: string
  /* subtitle renders HTML elements */
  subtitle?: string
}

const { title, subtitle } = Astro.props
---

<header class="mb-4 border-b border-zinc-700">
  <h1 class="text-xl font-bold mb-2">{title}</h1>
  {
    subtitle && (
      <p class="text-white/70 pb-2" set:html={subtitle} />
    )
  }
</header>
