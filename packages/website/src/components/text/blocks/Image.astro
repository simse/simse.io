---
import SvelteImage from '@components/Image.svelte'
import type { Image } from '@lib/cms/types'

interface Props {
  index: number
  isInline: boolean
  class?: string
  node: {
    _type: 'image'
    _key: string
    asset: {
      _ref: string
      _type: string
    }
    image: Image
  }
}

const props = Astro.props
---
<SvelteImage image={props.node.image} client:visible />
