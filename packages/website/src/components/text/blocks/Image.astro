---
import { getImageBuilder } from '@cms'

interface Props {
  index: number
  isInline: boolean
  class?: string
  node: {
    _type: 'image'
    _key: string
    asset: {
      _ref: string
      _type: string
    }
  }
}

const props = Astro.props

const imageBuilder = getImageBuilder(props.node.asset)
---

<img
  src={imageBuilder.width(1000).url()}
  class="my-4 w-full bg-zinc-900"
  alt=""
/>
