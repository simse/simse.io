---
import type { Project } from '@lib/cms/projects'
import ExpandedBubble from "@components/common/ExpandedBubble.svelte"
import { capitalizeFirstLetter } from '@utils/string'

interface Props {
  project: Project
}

const { project } = Astro.props

---
<ExpandedBubble
  title={project.title}
  href={`/${project.slug}`}
  description={project.description}
  smallText={capitalizeFirstLetter(project.type)}
  image={project.image}
/>
