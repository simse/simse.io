---
import client from '@lib/client'

import Button from '@components/common/Button.svelte'
import { imageUrlFromAssetRef } from '@lib/image'

const postsRequest = await client.api.posts.get()

const posts = postsRequest.data

const formatDate = (date: string) => {
  return new Date(date).toLocaleDateString('en-gb')
}
---
{posts && (
<section class="my-16" title="Blog">
  <a href="/blog">
    <h2 class="border-b text-lg font-bold mb-2 border-zinc-700">Blog Posts</h2>
  </a>

  <ul class="">
    {
      posts.slice(0, 10).map((post) => (
        <li class="flex items-center py-1 border-b border-zinc-700 border-dashed hover:bg-zinc-800">
          <img
            class="bg-zinc-800 aspect-[5/3] h-6 mr-2"
            src={post.image ? imageUrlFromAssetRef(post.image.asset._ref, {
              resizing_type: 'fill',
              width: 200,
              height: 120,
              gravity: { type: 'no' },
              enlarge: 1,
              format: 'avif',
            }) : ''}
          />
          <span class="font-mono font-bold mr-2 text-zinc-400">{formatDate(post.published)}</span>

          

          <span class="font-bold">{post.title}</span>

          <Button 
            client:load
            class="ml-auto"
            icon="mdi:arrow-right"
            iconPlacement="right"
            href={`/${post.slug}`}
          >
            Read
          </Button>
        </li>
      ))
    }
  </ul>

  {/* <p class="mt-4 text-zinc-300 border-t border-zinc-700 pt-1">
    Showing {posts.slice(0, 4).length} of {posts.length} blog posts
  </p> */}
</section>
)}