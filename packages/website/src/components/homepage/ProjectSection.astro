---
import SectionHeader from '@components/common/SectionHeader.svelte'
import { getProjects } from '@lib/cms'
import ProjectCard from '../projects/ProjectCard.astro'

const projects = await getProjects()
---

{projects.length > 0 ? <section class="my-16 max-w-xl mx-auto">
  <SectionHeader
    title="Projects"
    href="/projects"
  />

  <ul class="grid grid-cols-1 md:grid-cols-2 gap-x-4 gap-y-8 mt-8">
    {
      projects.slice(0, 4).map((project) => (
        <li>
          <ProjectCard project={project} />
        </li>
      ))
    }
  </ul>
</section> : null}
