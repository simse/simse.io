---
import { getProjects } from '@lib/cms'
import ProjectCard from '../projects/ProjectCard.astro'

const projects = await getProjects()
---

{projects.length > 0 ? <section class="my-16" title="Projects">
  <a href="/projects">
    <h2 class="text-xl mb-2 font-bold">Projects</h2>
  </a>

  <ul class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
    {
      projects.slice(0, 4).map((project) => (
        <li>
          <ProjectCard project={project} />
        </li>
      ))
    }
  </ul>

  <p class="mt-4 text-zinc-300 border-t border-zinc-700 pt-1">
    Showing {projects.slice(0, 4).length} of {projects.length} projects
  </p>
</section> : null}
