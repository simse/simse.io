{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "default",
      "pageBundle": false,
      "previewPath": null,
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "Excerpt",
          "name": "excerpt",
          "type": "string"
        },
        {
          "title": "Publishing date",
          "name": "publishedOn",
          "type": "datetime",
          "default": "{{now}}",
          "isPublishDate": true
        },
        {
          "title": "Cover Image Layout",
          "name": "coverLayout",
          "type": "choice",
          "choices": [
            "fullscreen",
            "half",
            "third",
            "below-title"
          ]
        },
        {
          "title": "Cover Image",
          "name": "cover",
          "type": "image"
        },
        {
          "title": "Cover Alt",
          "name": "coverAlt",
          "type": "string"
        },
        {
          "title": "Cover Caption",
          "name": "coverCaption",
          "type": "string"
        },
        {
          "title": "Is in draft",
          "name": "draft",
          "type": "draft"
        },
        {
          "title": "Tags",
          "name": "tags",
          "type": "tags"
        },
        {
          "title": "Categories",
          "name": "categories",
          "type": "categories"
        },
        {
          "title": "lastmod",
          "name": "lastmod",
          "type": "datetime"
        }
      ]
    },
    {
      "name": "project",
      "pageBundle": false,
      "previewPath": null,
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "Description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "Category",
          "name": "category",
          "type": "choice",
          "choices": [
            "Website",
            "Library",
            "Application",
            "Experiment",
            "Other"
          ]
        },
        {
          "title": "Tech Stack",
          "name": "techStack",
          "type": "list"
        },
        {
          "title": "type",
          "name": "type",
          "type": "string"
        },
        {
          "title": "lastmod",
          "name": "lastmod",
          "type": "datetime"
        },
        {
          "title": "sourceCode",
          "name": "sourceCode",
          "type": "string"
        }
      ]
    }
  ],
  "frontMatter.framework.id": "astro",
  "frontMatter.content.publicFolder": {
    "path": "src/assets",
    "relative": true
  },
  "frontMatter.preview.host": "http://localhost:4321",
  "frontMatter.content.pageFolders": [
    {
      "title": "Blog",
      "path": "[[workspace]]/src/content/blog"
    },
    {
      "title": "Projects",
      "path": "[[workspace]]/src/content/projects",
      "contentTypes": [
        "project"
      ]
    }
  ],
  "frontMatter.experimental": false,
  "frontMatter.framework.startCommand": "pnpm dev"
}